          xmlns:db="http://docbook.org/ns/docbook">


<refnamediv>
   <refname>slr_check_arg</refname>
   <refpurpose>
      Performs some tests on an argument.
   </refpurpose>
</refnamediv>

<refsynopsisdiv>
   <title>Syntax</title>
   <synopsis>
      slr_check_arg(arg, arg_name, tests)
      [ok, msg] = slr_check_arg(arg, arg_name, tests)
   </synopsis>
</refsynopsisdiv>

<refsection>
   <title>Parameters</title>
   <variablelist>
      <varlistentry>
         <term>arg </term>
         <listitem><para>the variable to be tested</para></listitem>
      </varlistentry>
      <varlistentry>
         <term>arg_name <emphasis>(string)</emphasis></term>
         <listitem><para>its name</para></listitem>
      </varlistentry>
      <varlistentry>
         <term>tests <emphasis>(list)</emphasis></term>
         <listitem><para>a list containing the tests to be performed</para></listitem>
      </varlistentry>
      <varlistentry>
         <term>ok <emphasis>(boolean)</emphasis></term>
         <listitem><para>answer of the tests</para></listitem>
      </varlistentry>
      <varlistentry>
         <term>msg <emphasis>(string)</emphasis></term>
         <listitem><para>error message associated with the first failed test.</para></listitem>
      </varlistentry>
   </variablelist>
</refsection>

<refsection>
   <title>Examples</title>
   <para><programlisting role="example"><![CDATA[
       tests = list('type',['constant'])
       slr_check_arg(1, 'a', tests)
   ]]></programlisting></para>
</refsection>
</refentry>
